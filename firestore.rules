rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    function userEmailLower() {
      return request.auth != null && request.auth.token.email != null
        ? request.auth.token.email.lower()
        : null;
    }
    
    // Helper function to check if user is in the allowed-users list
    function isAllowedUser() {
      return userEmailLower() != null &&
        exists(/databases/$(database)/documents/allowed-users/$(userEmailLower()));
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isNotDeleted() {
      return resource.data.deletedAt == null;
    }

    function isValidPublicBookingRequest() {
      return request.resource.data.keys().hasOnly([
          'customerKey',
          'requestedDate',
          'dog',
          'selection',
          'owner',
          'createdAt',
          'status'
        ])
        && request.resource.data.customerKey is string
        && request.resource.data.customerKey.size() >= 12
        && request.resource.data.requestedDate is timestamp
        && request.resource.data.createdAt is timestamp
        && request.resource.data.status == 'NEW'

        && request.resource.data.dog is map
        && request.resource.data.dog.keys().hasOnly([
          'name',
          'breedId',
          'breedName',
          'size',
          'ageYears'
        ])
        && request.resource.data.dog.name is string
        && request.resource.data.dog.breedId is string
        && (request.resource.data.dog.breedName == null || request.resource.data.dog.breedName is string)
        && (request.resource.data.dog.size == null || request.resource.data.dog.size in ['small', 'medium', 'large'])
        && (request.resource.data.dog.ageYears == null || request.resource.data.dog.ageYears is int)

        && request.resource.data.selection is map
        && request.resource.data.selection.keys().hasOnly([
          'packageId',
          'packageName',
          'serviceIds',
          'serviceNames',
          'estimatedTotal'
        ])
        && (request.resource.data.selection.packageId == null || request.resource.data.selection.packageId is string)
        && (request.resource.data.selection.packageName == null || request.resource.data.selection.packageName is string)
        && request.resource.data.selection.serviceIds is list
        && request.resource.data.selection.serviceIds.size() > 0
        && request.resource.data.selection.serviceIds.size() <= 20
        && request.resource.data.selection.serviceNames is list
        && request.resource.data.selection.estimatedTotal is number

        && request.resource.data.owner is map
        && request.resource.data.owner.keys().hasOnly(['name', 'phone'])
        && request.resource.data.owner.name is string
        && request.resource.data.owner.phone is string;
    }
    
    // Clients collection - allowed users only
    match /clients/{clientId} {
      allow read: if isAllowedUser();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Appointments collection - allowed users only
    match /appointments/{appointmentId} {
      allow read: if isAllowedUser();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Services collection - allowed users only
    match /services/{serviceId} {
      allow read: if isAllowedUser() || isNotDeleted();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Packages collection - allowed users only
    match /packages/{packageId} {
      allow read: if isAllowedUser() || isNotDeleted();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Invoices collection - allowed users only
    match /invoices/{invoiceId} {
      allow read: if isAllowedUser();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }

    // Settings collection - allowed users only
    match /settings/{settingsId} {
      allow read: if isAllowedUser();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Expenses collection - allowed users only
    match /expenses/{expenseId} {
      allow read: if isAllowedUser();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Breeds collection - allowed users only
    match /breeds/{breedId} {
      allow read: if isAllowedUser() || isNotDeleted();
      allow create, update: if isAllowedUser();
      allow delete: if false;
    }

    // Public booking requests (public create, admin-only read/manage)
    match /booking-requests/{requestId} {
      allow create: if isValidPublicBookingRequest();
      allow read, update: if isAllowedUser();
      allow delete: if false;
    }
    
    // Allowed users collection - authenticated users can read to verify access
    match /allowed-users/{email} {
      // Users may only read their own allow-list document.
      allow get: if userEmailLower() != null && userEmailLower() == email;
      allow list: if false;

      // Prevent writes from client (manage via Firebase Console / Admin tooling)
      allow create, update, delete: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
