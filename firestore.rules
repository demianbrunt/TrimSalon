rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Clients collection - authenticated users only
    match /clients/{clientId} {
      allow read, write: if isAuthenticated();
    }
    
    // Appointments collection - authenticated users only
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Services collection - authenticated users only
    match /services/{serviceId} {
      allow read, write: if isAuthenticated();
    }
    
    // Packages collection - authenticated users only
    match /packages/{packageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Invoices collection - authenticated users only
    match /invoices/{invoiceId} {
      allow read, write: if isAuthenticated();
    }
    
    // Expenses collection - authenticated users only
    match /expenses/{expenseId} {
      allow read, write: if isAuthenticated();
    }
    
    // Breeds collection - authenticated users only
    match /breeds/{breedId} {
      allow read, write: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
