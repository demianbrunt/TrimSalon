rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is in the allowed-users list
    function isAllowedUser() {
      return request.auth != null && exists(/databases/$(database)/documents/allowed-users/$(request.auth.token.email));
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Clients collection - allowed users only
    match /clients/{clientId} {
      allow read, write: if isAllowedUser();
    }
    
    // Appointments collection - allowed users only
    match /appointments/{appointmentId} {
      allow read, write: if isAllowedUser();
    }
    
    // Services collection - allowed users only
    match /services/{serviceId} {
      allow read, write: if isAllowedUser();
    }
    
    // Packages collection - allowed users only
    match /packages/{packageId} {
      allow read, write: if isAllowedUser();
    }
    
    // Invoices collection - allowed users only
    match /invoices/{invoiceId} {
      allow read, write: if isAllowedUser();
    }
    
    // Expenses collection - allowed users only
    match /expenses/{expenseId} {
      allow read, write: if isAllowedUser();
    }
    
    // Breeds collection - allowed users only
    match /breeds/{breedId} {
      allow read, write: if isAllowedUser();
    }
    
    // Allowed users collection - authenticated users can read to verify access
    match /allowed-users/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Prevent writes from client
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
