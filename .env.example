# TrimSalon (Angular app) local configuration
# Copy this file to `.env` and fill in real values. Do NOT commit `.env`.

# Firebase Web App config (public values; still keep out of source to support per-env config)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
RECAPTCHA_SITE_KEY=

# App Check provider behind the site key: 'v3' (classic) or 'enterprise'
RECAPTCHA_PROVIDER=v3

# Google Identity Services OAuth client id (public)
GOOGLE_OAUTH_CLIENT_ID=

# App flags
APP_DEV_MODE=false

# Advanced: allow config generation to proceed with empty values (useful for CI)
ALLOW_EMPTY_RUNTIME_CONFIG=false

# Optional (local dev): stable App Check debug token.
# If you set this, add the same value in Firebase Console:
# App Check -> Apps -> (your web app) -> Manage debug tokens.
FIREBASE_APPCHECK_DEBUG_TOKEN=
