rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is in the allowed-users list
    function isAllowedUser() {
      return request.auth != null && request.auth.token.email != null &&
        exists(/databases/(default)/documents/allowed-users/$(request.auth.token.email.lower()));
    }
    
    // Only allowed users can read/write files
    match /{allPaths=**} {
      allow read, write: if isAllowedUser();
    }
  }
}
